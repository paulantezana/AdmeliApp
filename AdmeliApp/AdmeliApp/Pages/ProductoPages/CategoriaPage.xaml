<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdmeliApp.Pages.ProductoPages.CategoriaPage">
    <ContentPage.Content>
        <ListView 
            ItemsSource="{Binding CategoriaItems}"
            HasUnevenRows="True"
            IsPullToRefreshEnabled="True"
            RefreshCommand="{Binding RefreshCategoriaCommand}"
            IsRefreshing="{Binding IsRefreshingCategoria, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.ContextActions>
                            <MenuItem Text="Anular" Command="{Binding Editar}"/>
                            <MenuItem Text="Eliminar"/>
                        </ViewCell.ContextActions>
                        <StackLayout  BackgroundColor="White" Padding="15,12">
                            <Label Text="{Binding nombreCategoria}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>