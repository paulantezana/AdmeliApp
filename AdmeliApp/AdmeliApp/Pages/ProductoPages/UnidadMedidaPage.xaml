<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Float="clr-namespace:SuaveControls.Views;assembly=SuaveControls.FloatingActionButton"
             x:Class="AdmeliApp.Pages.ProductoPages.UnidadMedidaPage">
    <ContentPage.Content>
        <RelativeLayout>

            <!-- Listar registros en el listview -->
            <ContentView
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}"  
                RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1}">

                <SearchBar
                        Text="{Binding SearchText, Mode=TwoWay}"
                        SearchCommand="{Binding SearchCommand}"
                        Placeholder="Buscar..."/>

                <ListView 
                    ItemsSource="{Binding UnidadMedidaItems}"
                    HasUnevenRows="True"
                    IsPullToRefreshEnabled="True"
                    RefreshCommand="{Binding RefreshUnidadMedidaCommand}"
                    IsRefreshing="{Binding IsRefreshingUnidadMedida, Mode=TwoWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.ContextActions>
                                    <MenuItem Text="Anular" Command="{Binding AnularCommand}"/>
                                    <MenuItem Text="Eliminar" Command="{Binding EliminarCommand}"/>
                                </ViewCell.ContextActions>
                                <StackLayout  BackgroundColor="White" Padding="15,12">
                                    <Label Text="{Binding nombreUnidad}"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ContentView>

            <!-- Botton flotante para agregar un nuevo registro -->
            <Float:FloatingActionButton 
                x:Name="FAB"
                ButtonColor="#0097F6"
                BackgroundColor="White"
                WidthRequest="65"
                HeightRequest="65"
                RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1, Constant=-75}"  
                RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1, Constant=-75}"
                Image="floatAdd_icon.png"/>
        </RelativeLayout>

    </ContentPage.Content>
</ContentPage>