<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdmeliApp.Pages.Root.HomePage"
             xmlns:Float="clr-namespace:SuaveControls.Views;assembly=SuaveControls.FloatingActionButton"
             xmlns:microcharts="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             BackgroundColor="White"
             Title="Home">
    <StackLayout>
        <Label Text="Ventas del ultimo mes" HorizontalOptions="CenterAndExpand"></Label>
        <Label Text="Estadisticas" HorizontalOptions="CenterAndExpand" FontSize="Small" TextColor="{StaticResource GreyLight}"></Label>
        <microcharts:ChartView x:Name="Chart1" HeightRequest="250"/>
    </StackLayout>
</ContentPage>